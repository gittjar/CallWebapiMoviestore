
@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Home Page";
}

<section class="kortit">


    @foreach (var item in Model)
    {
                <article class="card">
                 
                    <div class="card-body">
                        <h5 class="card-title">@item.Id - @item.Title</h5>
                        <p class="card-text">@item.Genre</p>
                        <hr />
                        <p class="card-text">@item.ProductionComp</p>
                        <b class="card-text">@item.Price €</b>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <a href="#" class="btn btn-primary">Osta</a>
                            <p class="card-text"><small class="text-muted">@item.ReleaseDate</small></p>

                        </div>

                    </div>
                </article>
    }

</section>

